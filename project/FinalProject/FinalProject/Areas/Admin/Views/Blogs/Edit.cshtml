                <input asp-for="PostDate" class="form-control" />
                <span asp-validation-for="PostDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostText" class="control-label"></label>
                <input asp-for="PostText" class="form-control" />
                <span asp-validation-for="PostText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostImg" class="control-label"></label>
                <input asp-for="PostImg" class="form-control" accept="image/*" />
                <span asp-validation-for="PostImg" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PostImage" />
            <input type="hidden" asp-for="NewsImage" />
