            </div>
            <div class="form-group">
                <label asp-for="NewsImg" class="control-label"></label>
                <input asp-for="NewsImg" class="form-control" accept="image/*" />
                <span asp-validation-for="NewsImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostTitle" class="control-label"></label>
                <input asp-for="PostTitle" class="form-control" />
