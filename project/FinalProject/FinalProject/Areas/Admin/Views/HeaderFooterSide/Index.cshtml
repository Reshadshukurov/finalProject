@model IEnumerable<FinalProject.Models.HeaderFooterSide>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HeaderLogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FooterLogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CopyRightText)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/img/@Html.DisplayFor(modelItem => item.HeaderLogo)" width="100" />
            </td>
            <td>
                <img src="~/img/@Html.DisplayFor(modelItem => item.FooterLogo)" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CopyRightText)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
            </td>
        </tr>
}
    </tbody>
</table>
